      block page

    block modals
    // Modal login window
    #modalLogin.modal.fade(role='dialog' )
      .modal-dialog.modal-dialog_custom
        // Modal content
        .modal-dialog__inner
          button.close(type='button', data-dismiss='modal')
          .modal-dialog__content
            h5.heading-decorated Get in Touch
            // RD Mailform
            form.rd-mailform.rd-mailform_style-1(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
              .form-wrap.form-wrap_icon.linear-icon-man
                input#contact-popup-name.form-input(type="text" name="name" data-constraints='@Required')
                label.form-label(for="contact-popup-name") Your name

              .form-wrap.form-wrap_icon.linear-icon-envelope
                input#contact-popup-email.form-input(type="email" name="email" data-constraints="@Email @Required")
                label.form-label(for="contact-popup-email") Your e-mail

              .form-wrap.form-wrap_icon.linear-icon-feather
                textarea#contact-popup-message.form-input(name="message" data-constraints="@Required")
                label.form-label(for="contact-popup-message") Your message

              button(type="submit").button.button-primary send

    // Global Mailform Output
    #form-output-global.snackbars

